{
  "name": "@shotz/shared",
  "version": "0.0.4",
  "description": "Shared React components, hooks, and utilities for Shotz editor and screenshot tools.",
  "main": "./lib/index.cjs.js",
  "module": "./lib/index.es.js",
  "types": "./lib/types/index.d.ts",
  "files": [
    "lib"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/index.es.js",
      "require": "./lib/index.cjs.js",
      "default": "./lib/index.cjs.js"
    },
    "./index.css": "./lib/index.css",
    "./styles/*": "./lib/styles/*",
    "./types": "./lib/types/types.d.ts",
    "./components": {
      "types": "./lib/types/components/index.d.ts",
      "import": "./lib/components/index.es.js",
      "require": "./lib/components/index.cjs.js",
      "default": "./lib/components/index.cjs.js"
    },
    "./components/operations": {
      "types": "./lib/types/components/operations/index.d.ts",
      "import": "./lib/components/operations/index.es.js",
      "require": "./lib/components/operations/index.cjs.js",
      "default": "./lib/components/operations/index.cjs.js"
    },
    "./constants": {
      "types": "./lib/types/constants/index.d.ts",
      "import": "./lib/constants/index.es.js",
      "require": "./lib/constants/index.cjs.js",
      "default": "./lib/constants/index.cjs.js"
    },
    "./context": {
      "types": "./lib/types/context/index.d.ts",
      "import": "./lib/context/index.es.js",
      "require": "./lib/context/index.cjs.js",
      "default": "./lib/context/index.cjs.js"
    },
    "./hooks": {
      "types": "./lib/types/hooks/index.d.ts",
      "import": "./lib/hooks/index.es.js",
      "require": "./lib/hooks/index.cjs.js",
      "default": "./lib/hooks/index.cjs.js"
    },
    "./utils": {
      "types": "./lib/types/utils/index.d.ts",
      "import": "./lib/utils/index.es.js",
      "require": "./lib/utils/index.cjs.js",
      "default": "./lib/utils/index.cjs.js"
    }
  },
  "scripts": {
    "start": "vite",
    "dev": "tsc --watch",
    "build": "pnpm run clean && pnpm run build:vite",
    "build:tsc": "tsc",
    "build:vite": "vite build",
    "version:patch": "pnpm version patch --no-workspaces-update",
    "release": "pnpm publish --access public",
    "yalc:publish": "yalc publish",
    "preview": "vite preview",
    "clean": "rimraf lib"
  },
  "keywords": [
    "shotz",
    "react",
    "image",
    "editor",
    "shared"
  ],
  "author": "Ethan",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.2",
    "fs-extra": "^11.3.1",
    "less": "^4.4.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethan2478/shotz"
  },
  "bugs": {
    "url": "https://github.com/ethan2478/shotz/issues"
  },
  "homepage": "https://github.com/ethan2478/shotz"
}
