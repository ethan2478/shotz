{
  "name": "@shotz/shared",
  "version": "0.0.1",
  "description": "Shared React components, hooks, and utilities for Shotz editor and screenshot tools.",
  "main": "./lib/index.cjs.js",
  "module": "./lib/index.es.js",
  "types": "./lib/types/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/index.es.js",
      "require": "./lib/index.cjs.js",
      "default": "./lib/index.cjs.js"
    },
    "./index.css": "./lib/index.css"
  },
  "scripts": {
    "start": "vite",
    "dev": "tsc --watch",
    "build": "pnpm run clean && pnpm run build:vite",
    "build:tsc": "tsc",
    "build:vite": "vite build",
    "preview": "vite preview",
    "clean": "rimraf lib"
  },
  "keywords": [
    "shotz",
    "react",
    "image",
    "editor",
    "shared"
  ],
  "author": "Ethan",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "packageManager": "pnpm@10.9.0",
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.2",
    "less": "^4.4.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "publishConfig": {
    "registry": "https://www.npmjs.com/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethan2478/shotz"
  },
  "bugs": {
    "url": "https://github.com/ethan2478/shotz/issues"
  },
  "homepage": "https://github.com/ethan2478/shotz"
}
