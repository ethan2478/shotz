{
  "name": "shotz",
  "private": true,
  "version": "0.0.0",
  "description": "A monorepo for screenshot and image editing tools, built with React and Electron.",
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm -r run build",
    "version:patch": "pnpm -r run version:patch",
    "release": "pnpm -r run release",
    "start:editor:demo": "pnpm --filter @shotz/image-editor-demo start",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx packages",
    "lint:style": "stylelint \"packages/**/*.{css,less}\"",
    "format": "prettier --write .",
    "changeset": "changeset"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,less}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "screenshot",
    "image",
    "editing",
    "react",
    "electron",
    "web",
    "shotz"
  ],
  "author": "Ethan",
  "license": "MIT",
  "packageManager": "pnpm@10.9.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "postcss-less": "^6.0.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethan2478/shotz"
  },
  "bugs": {
    "url": "https://github.com/ethan2478/shotz/issues"
  },
  "homepage": "https://github.com/ethan2478/shotz"
}
